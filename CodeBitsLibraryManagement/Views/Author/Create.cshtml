
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Author

<h1 class="text-center">Add Author</h1>

<form asp-controller="Author" asp-action="Create" method="post" class="mt-3 container">
    <div class="row">

        <div class="form-group row col-md-6">
            <label asp-for="Au_ID" class="col-sm-2 col-form-label">ID</label>
            <div class="col-sm-10">
                <input asp-for="Au_ID" type="number" class="form-control" placeholder="ID" />
            </div>
        </div>

        <div class="form-group row col-md-6">
            <label asp-for="Au_Name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input asp-for="Au_Name" type="text" class="form-control" placeholder="Name" />
            </div>
        </div>

    </div>

    <div class="row">
        <div class="form-group row col-md-6">
            <label asp-for="Sex" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="Sex" name="Sex" id="act" class="btn btn-secondary">
                    <option value="">Male</option>
                    <option value="">Female</option>
                </select>
            </div>
        </div>

        <div class="form-group row col-md-6">
            <label asp-for="Phone" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Phone" type="tel" class="form-control" placeholder="Phone" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group row col-md-6">
            <label asp-for="Address" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Address" class="form-control" placeholder="Address" />
            </div>
        </div>

        <div class="form-group row col-md-6">
            <label asp-for="City" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="City" class="form-control" type="text" placeholder="City" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group row col-md-6">
            <label asp-for="State" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="State" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<State>()"></select>
            </div>
        </div>

        <div class="col-md-6"></div> 
    </div>

    <div class="row">
        <div class="col-md-1"></div>
        <input asp-page-handler="Upload" class="btn btn-secondary col-md-10" type="submit" value="Upload" />
        <div class="col-md-1"></div>
    </div>
</form>

