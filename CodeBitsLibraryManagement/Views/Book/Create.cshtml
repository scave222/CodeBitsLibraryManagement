
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Book

<h1 class="text-center">Add Book</h1>

<form enctype="multipart/form-data" method="post">
    <div class="row">

        <div class="form-group row col-md-6">
            <label asp-for="Book_ID" class="col-sm-2 col-form-label">ID</label>
            <div class="col-sm-10">
                <input asp-for="Book_ID" type="number" class="form-control" placeholder="ID" />
            </div>
        </div>

        <div class="form-group row col-md-6">
            <label asp-for="Book_Name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input asp-for="Book_Name" type="text" class="form-control" placeholder="Name" />
            </div>
        </div>

    </div>

    <div class="row">
        <div class="form-group row col-md-6">
            <label asp-for="Price" class="col-sm-2 col-form-label">Price</label>
            <div class="col-sm-10">
                <input asp-for="Price" type="number" class="form-control" placeholder="Price" />
            </div>
        </div>

        <div class="form-group row col-md-6">
            <label asp-for="Au_ID" class="col-sm-2 col-form-label">Author ID</label>
            <div class="col-sm-10">
                <input asp-for="Au_ID" type="number" class="form-control" placeholder="Author ID" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group row col-md-6">
            <label asp-for="Pub_ID" class="col-sm-2 col-form-label">Pulisher ID</label>
            <div class="col-sm-10">
                <input asp-for="Pub_ID" class="form-control" type="text" placeholder="Publisher ID" />
            </div>
        </div>

        <div class="form-group row col-md-6">
            <label asp-for="Dt_Of_Publish" class="col-sm-2 col-form-label">Publish Date</label>
            <div class="col-sm-10">
                <input asp-for="Dt_Of_Publish" class="form-control" type="text" placeholder="Date of publish" />
            </div>
        </div>
    </div>



    <div class="row">
        <div class="col-md-1"></div>
        <input asp-page-handler="Upload" class="btn btn-secondary col-md-10" type="submit" value="Upload" />
        <div class="col-md-1"></div>
    </div>
</form>

