@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Publisher
<h1 class="text-center">Add publisher</h1>
<form asp-controller="Author" asp-action="Create" method="post" class="mt-3 container">
    <div class="row">

        <div class="form-group row col-md-6">
            <label asp-for="Pub_ID" class="col-sm-2 col-form-label">ID</label>
            <div class="col-sm-10">
                <input asp-for="Pub_ID" type="number" class="form-control" placeholder="123" />
            </div>
        </div>

        <div class="form-group row col-md-6">
            <label asp-for="Pub_Name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input asp-for="Pub_Name" type="text" class="form-control" placeholder="Name" />
            </div>
        </div>

    </div>

    <div class="row">
        <div class="form-group row col-md-6">
            <label asp-for="Phone" class="col-sm-2 col-form-label">Phone</label>
            <div class="col-sm-10">
                <input asp-for="Phone" type="tel" class="form-control" placeholder="Phone" />
            </div>
        </div>

        <div class="form-group row col-md-6">
            <label asp-for="Address" class="col-sm-2 col-form-label">Address</label>
            <div class="col-sm-10">
                <input asp-for="Address" type="text" class="form-control" placeholder="Address" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group row col-md-6">
            <label asp-for="City" class="col-sm-2 col-form-label">City</label>
            <div class="col-sm-10">
                <input asp-for="City" class="form-control" placeholder="City" />
            </div>
        </div>

        <div class="form-group row col-md-6">
            <label asp-for="State" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="State" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<State>()"></select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group row col-md-6">
            <label asp-for="Country" class="col-sm-2 col-form-label">Country</label>
            <div class="col-sm-10">
                @*<select asp-for="Country" class="custom-select mr-sm-2" typeof="btn">
                    @foreach (var country in Model.Countries)
                    {
                        <option>@country</option>
                    }
                </select>*@
                <select asp-for="Country" asp-items="Html.GetEnumSelectList<Countries>()"></select>
            </div>
        </div>

        <div class="col-md-6"></div>
    </div>

    <div class="row">
        <div class="col-md-1"></div>
        <input asp-page-handler="Upload" class="btn btn-secondary col-md-10" type="submit" value="Upload" />
        <div class="col-md-1"></div>
    </div>
</form>


